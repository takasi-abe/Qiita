<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical" android:id="@+id/linearLayout">
    <ImageView
            android:layout_width="69dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/star_on"
            android:id="@+id/icon" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title" app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/date" app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            app:layout_constraintTop_toTopOf="@+id/date" app:layout_constraintBottom_toBottomOf="@+id/date"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/date" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
